@keyframes ani {
  0% {
    bottom: 0;
    transform: scale(1); }
  25% {
    margin-left: -8rpx;
    transform: scale(1.5); }
  50% {
    margin-left: 10rpx;
    opacity: 1;
    transform: scale(1.5); }
  75% {
    margin-left: -10rpx; }
  100% {
    margin-left: 10rpx;
    bottom: 600rpx;
    opacity: 0; } }

